<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/rateGroupClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/haveYouBeenHereExplanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="@string/groupDetailMoreGroupVerification"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/rateGroupClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/starsLayout"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@+id/haveYouBeenHereExplanation"
        app:layout_constraintEnd_toEndOf="@+id/haveYouBeenHereExplanation"
        app:layout_constraintStart_toStartOf="@+id/haveYouBeenHereExplanation">

        <ImageButton
            android:id="@+id/favorite_button_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#00ffffff" />
        <ImageButton
            android:id="@+id/favorite_button_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#00ffffff" />
        <ImageButton
            android:id="@+id/favorite_button_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#00ffffff" />
        <ImageButton
            android:id="@+id/favorite_button_4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#00ffffff" />
        <ImageButton
            android:id="@+id/favorite_button_5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#00ffffff"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wouldYouLikeToRate"
        android:id="@+id/wouldYouRate"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/starsLayout"
        app:layout_constraintEnd_toEndOf="@+id/starsLayout"
        app:layout_constraintStart_toStartOf="@+id/starsLayout"/>

    <Button
        android:id="@+id/haveYouBeenHereButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="@string/groupDetailMoreIKnowItButton"
        app:layout_constraintTop_toBottomOf="@+id/wouldYouRate"
        app:layout_constraintEnd_toEndOf="@+id/wouldYouRate"
        app:layout_constraintStart_toStartOf="@+id/wouldYouRate"/>



</androidx.constraintlayout.widget.ConstraintLayout>