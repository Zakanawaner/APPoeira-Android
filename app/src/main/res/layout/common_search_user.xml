<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/searchUserLayout"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:gravity="center"
    app:layout_constraintTop_toBottomOf="@+id/modificationDatesConstraint"
    app:layout_constraintEnd_toEndOf="@+id/modificationDatesConstraint"
    app:layout_constraintStart_toStartOf="@+id/modificationDatesConstraint">

    <TextView
        android:id="@+id/searchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/serchTitle"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"/>

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchUsers"
        android:autofillHints="@string/searchUsersHint"/>

    <RelativeLayout
        android:id="@+id/ListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

</LinearLayout>